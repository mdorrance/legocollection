<%- model_class = Kit -%>
<div class="page-header">
  <h1>Current Lego Kits</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:photo_url) %></th>
      <th><%= model_class.human_attribute_name(:set_num) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:theme_id) %></th>


    </tr>
  </thead>
  <tbody>
    <% @kits.each do |kit| %>
      <tr>

        <td><%= link_to kit.name, kit_url(kit.id) %></td>
        <td><%= image_tag kit.photo_url, :width => 150, :height => 150 %></td>
        <td><%= kit.set_num %></td>
        <td><%= kit.date %></td>
        <td><%= number_to_currency kit.value %></td>
        <td><%= kit.user.name %></td>
        <td><%= kit.theme.name %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_kit_path(kit), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      kit_path(kit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_kit_path,
            :class => 'btn btn-primary' %>
